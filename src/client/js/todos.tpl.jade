section#todoapp
	header#header
		h1 todos
		{{ input type="text" id="new-todo" placeholder="What needs to be done?" value=newTitle action="createTodo" }}

	section#main(data-todos-list)
		ul#todo-list
			{{#each}}
			li("{{bind-attr class='isCompleted:completed'}}")
				input.toggle(type="checkbox")
				label {{ title }}
				button.destroy
			{{/each}}


	footer#footer
		span#todo-count
			strong 2
			| todos left
		ul#filters
			li: a.selected(href="#/all") All
			li: a(href="#/active") Active
			li: a(href="#/completed") Completed

		button#clear-completed Clear Completed (1)

footer#info
	p Double click to edit a todos